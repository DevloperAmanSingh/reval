{
  "name": "reval-ai-reviewer",
  "version": "1.0.0",
  "private": true,
  "description": "Reval - AI-powered code reviewer.",
  "main": "lib/main.js",
  "scripts": {
    "build": "cp node_modules/@dqbd/tiktoken/tiktoken_bg.wasm dist/tiktoken_bg.wasm && tsc",
    "package": "ncc build --license licenses.txt",
    "act": "npm run build && npm run package && ./bin/act pull_request_target --secret-file .secrets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/reval-ai-reviewer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@dqbd/tiktoken": "^1.0.7",
    "@google/generative-ai": "^0.2.1",
    "@octokit/action": "^6.0.4",
    "@octokit/plugin-retry": "^4.1.3",
    "@octokit/plugin-throttling": "^6.1.0",

    "chatgpt": "^5.0.0",
    "minimatch": "^9.0.1",
    "node-fetch": "^3.3.1",
    "p-limit": "^4.0.0",
    "p-retry": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@vercel/ncc": "^0.36.1",
    "typescript": "^4.9.5"
  }
}
